{
  "name": "jinwoo-engineering",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch:css": "npx sass --watch --style=expanded src/scss:src/css",
    "watch:js": "npx babel ./src/js --watch --out-dir ./src/js",
    "start--public": "concurrently \"npm run watch:html--public\" \"npm run watch:css--public\" \"npm run watch:js--public\"",
    "watch:html--public": "npx nodemon -e html -w ./src -x \"npm run minify:html\"",
    "watch:css--public": "npx sass --watch --style=compressed src/scss:public/css",
    "watch:js--public": "npx babel ./src/js --watch --out-dir ./public/js",
    "watch:js--lower": "npx babel ./src/js --watch --out-dir ./public/js --out-file-extension .lower.js --ignore 'src/js/common/*.js'",
    "minify:html": "npx html-minifier --file-ext html --input-dir ./src --output-dir ./public --collapse-whitespace --collapse-boolean-attributes --remove-comments --remove-empty-attributes  --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --remove-tag-whitespace --sort-attributes --sort-class-name --trim-custom-fragments --minify-css --minify-js",
    "prefixer:css": "npx postcss ./public/css/*.css --use autoprefixer -d ./public/css/",
    "build:css": "npx postcss ./public/css/*.css --use autoprefixer -d ./build/css/ --no-map --verbose",
    "eslint": "eslint -c .eslintrc.json ./src/js/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jinwoo-engineering/jinwoo-engineering.github.io.git"
  },
  "author": "thegi.code@gamil.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jinwoo-engineering/jinwoo-engineering.github.io/issues"
  },
  "homepage": "https://jinwoo-engineering.github.io/",
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/plugin-transform-object-assign": "^7.12.13",
    "@babel/plugin-transform-template-literals": "^7.13.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.5",
    "autoprefixer": "^10.2.5",
    "babel-plugin-remove-template-literals-whitespace": "^1.0.3",
    "babel-plugin-transform-inline-consecutive-adds": "^0.4.3",
    "babel-plugin-transform-remove-debugger": "^6.9.4",
    "babel-plugin-transform-remove-undefined": "^0.5.0",
    "babel-preset-minify": "^0.5.1",
    "browserslist": "^4.16.3",
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "express": "^4.17.1",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.7",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.8"
  },
  "browserslist": [
    "last 3 version"
  ]
}
